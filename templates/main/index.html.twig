{% extends 'base.html.twig' %}

{% block title %}Bienvenue
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Site e-commerce</h1>
				<p>Bienvenue dans notre boutique</p>
			</div>
			{# boucle #}
			{% for category in categories %}
				{# test si catégorie parent #}
				{% if category.parent == null %}
					<div class="col-12">
						<h2>{{category.name}}</h2>
					</div>
				{% else %}
					{# sinon affiche une carte de la catégorie #}
					<div class="col-4">
						<div class="card h-100">
							<div class="card-body">
								<h3 class="card-title">{{category.name}}</h3>
								<div class="card-text">
									<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Beatae a, iste, dolorem rem architecto, cumque temporibus similique officiis exercitationem esse voluptatem! Vitae iure atque officia voluptas minima vel ut sit.</p>
									<a href="{{ path('categories_list', {slug: category.slug})}}" class="btn btn-primary btn-small">Voir les produits</a>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</section>
	</main>


{% endblock %}
